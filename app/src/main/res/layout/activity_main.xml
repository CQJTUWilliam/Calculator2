<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="right|center_vertical"
            android:text="3*4/2-1"
            android:id="@+id/tv_DisplayInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />
        <TextView
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="right|center_vertical"
            android:text="5"
            android:id="@+id/tv_DisplayResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"    />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <GridLayout
            android:id="@+id/glNumbersPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="4">
            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="20dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="8"
                android:textSize="20dp"
                android:id="@+id/btn_8"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="9"
                android:textSize="20dp"
                android:id="@+id/btn_9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="6"
                android:textSize="20dp"
                android:id="@+id/btn_4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="5"
                android:textSize="20dp"
                android:id="@+id/btn_5"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="4"
                android:textSize="20dp"
                android:id="@+id/btn_6"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/btn_1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="2"
                android:textSize="20dp"
                android:id="@+id/btn_2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="3"
                android:textSize="20dp"
                android:id="@+id/btn_3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="."
                android:textSize="20dp"
                android:id="@+id/btn_dot"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/btn_0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
            <Button
                android:text="="
                android:textSize="20dp"
                android:id="@+id/btn_equal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
        </GridLayout>
        <GridLayout
            android:layout_toRightOf="@+id/glNumbersPanel"
            android:id="@+id/glOperatorsPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:columnCount="1"
            android:rowCount="6">
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_del"
                android:text="DEL"
                android:textSize="20dp"
                android:layout_rowWeight="1"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_divide"
                android:text="/"
                android:textSize="20dp"
                android:layout_rowWeight="1"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_multiply"
                android:text="*"
                android:textSize="20dp"
                android:layout_rowWeight="1"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_subtract"
                android:text="-"
                android:textSize="20dp"
                android:layout_rowWeight="1"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="20dp"
                android:layout_rowWeight="1"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>